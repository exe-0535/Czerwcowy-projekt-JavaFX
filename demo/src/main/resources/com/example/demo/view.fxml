<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.Controller" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Zmiana motywu" />
    <ScrollBar fx:id="themeScrollBar" min="0" max="100" orientation="HORIZONTAL" prefWidth="300" />

    <TextArea fx:id="noteTextArea" prefHeight="200.0" prefWidth="300.0" />
    <Button fx:id="saveButton" text="Zapisz notatkę" onAction="#onSaveButtonClick" />
    <Button fx:id="loadButton" text="Załaduj notatkę z pliku" onAction="#onLoadButtonClick" />
    <Label fx:id="notificationLabel" text="" visible="false"/>
</VBox>
